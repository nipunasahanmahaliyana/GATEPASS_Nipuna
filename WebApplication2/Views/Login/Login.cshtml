@model GatePass_Project.Models.MyLogin

@{
    Layout = null;
}

@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GatePass.styles.css" asp-append-version="true" />
</head>

<style>
    body {
        background-image: url('https://blog.apnic.net/wp-content/uploads/2022/06/SLTMobitel_banner.png');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
    }

    .navbar {
        background-color: #333;
        position: fixed;
        width: 100%;
    }

    .logginn {
    }

    .content {
        display: flex;
        justify-content: center;
    }

    nav {
        top: 0%;
    }

    .form {
        width: 300px;
    }

    .container {
        width: fit-content;
        top: 50%;
        position: absolute;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }
</style>

<body>
    <div class="content bg-danger">
        <div class="container">
            <div class="row">

                <form class="align-items-center form" style="color: #ffffff"  method="post" asp-action="NewLogin" asp-controller="Login">
                    <div class="mb-3">
                        <label for="NIC" class="form-label">NIC</label>
                        <input type="text"
                               id="NIC"
                               name="NIC"
                               class="form-control"
                               placeholder="Enter NIC Here" />
                    </div>

                    <div class="mb-3">
                        <label for="Non_slt_Id" class="form-label">Non SLT Id</label>
                        <input type="text"
                               id="Non_slt_Id"
                               name="Non_slt_Id"
                               class="form-control"
                               placeholder="Enter Non-SLT-Id Here" />
                    </div>
                    <div class="d-flex justify-content-center pt-4">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                    <div class="d-flex justify-content-center pt-3">
                        <!--<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("SLTLogin", "SLTLogin")'"> SLT IAM</button>-->
                    </div>
                </form>
            </div>
            <div class="row">
                <div class="col">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Message"]
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>

<!-- Include jQuery -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<style>
    .gatepass-heading {
        color: #007bff; /* Set the font color to blue */
    }
</style>


